{
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@7.15.0",
  "scripts": {
    "dev": "nuxt dev -p 3333",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "generate": "nuxt generate",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "prepare": "is-ci || husky install",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "nuxi typecheck",
    "run:eslint": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint/ --ext .ts,.vue,.json,.yaml,.yml .",
    "run:stylelint": "stylelint --fix --cache --cache-location ./node_modules/.cache/stylelint/ '**/*.{css,scss,vue}'",
    "lint": "pnpm run:eslint && pnpm run:stylelint",
    "format": "prettier -uw --cache ."
  },
  "dependencies": {
    "@headlessui/vue": "1.7.4",
    "@pinia/nuxt": "0.4.3"
  },
  "devDependencies": {
    "@histoire/plugin-nuxt": "0.11.6",
    "@histoire/plugin-vue": "0.11.6",
    "@nuxt/test-utils-edge": "3.0.0-rc.14-27802701.2f53495",
    "@nuxtjs/google-fonts": "3.0.0-1",
    "@nuxtjs/tailwindcss": "6.1.3",
    "@testing-library/vue": "6.6.1",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "@vitest/coverage-c8": "0.25.1",
    "@vueuse/core": "9.5.0",
    "@vueuse/nuxt": "9.5.0",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jsonc": "2.5.0",
    "eslint-plugin-vue": "9.7.0",
    "eslint-plugin-yml": "1.2.0",
    "happy-dom": "7.6.7",
    "histoire": "0.11.6",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "msw": "0.48.1",
    "nuxt": "3.0.0-rc.13",
    "nuxt-icon": "0.1.7",
    "postcss-html": "1.5.0",
    "prettier": "2.7.1",
    "sass": "1.56.1",
    "stylelint": "14.14.1",
    "stylelint-config-css-modules": "4.1.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-config-standard-vue": "1.0.0",
    "typescript": "4.8.4",
    "vitest": "0.25.1",
    "vue-tsc": "0.40.13"
  },
  "peerDependencies": {
    "@histoire/plugin-vue": "0.11.6",
    "histoire": "0.11.6"
  },
  "lint-staged": {
    "*.{ts,vue,json,yaml,yml}": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "*.{css,scss,vue}": "stylelint --fix --cache --cache-location ./node_modules/.cache/stylelint/",
    "*": "prettier -wu --cache",
    "*.{test,spec}.ts": "vitest related"
  }
}
